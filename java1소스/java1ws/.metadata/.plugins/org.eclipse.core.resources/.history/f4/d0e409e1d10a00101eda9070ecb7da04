package 박수경;

public class 박수경실행 {

	public static void main(String[] args) {
		//Q. 업캐스팅을 해야만 다운캐스팅을 할 수 있나요?
		//차 a = new 차();
		구급차 b = new 구급차();
		
		//a.부릉();
		b.부릉();
		b.삐용();
		//System.out.println(a.부릉());
		
		//차 a=b; Q. 원래 있던 a 변수를 왜 못쓰는지..?
		 차 c = b; //업캐스팅,  b 변수를 c로 바꿔준다고 생각..?
		
		  
		 c.부릉();
		// c.삐용(); //업캐스팅했기 때문에 삐용은 사용 불가
		
		 구급차 d=(구급차)c;//다운캐스팅 :c라는 객체가 원래는 구급차였는데, 구급차 타입의 d 변수로 다운캐스팅 할게~
		//잘못된 다운캐스팅은 모르겠습니다..
		d.삐용();
		d.부릉();
		
		
		
		//상속관계에서 무조건 다운캐스팅이 되는 것은 아니다
		
		// 차, 구급차는 상속관계이다 
		
		차 멋있는차  = 	new 차();
		((구급차)멋있는차).삐용();   // 올바르지 않은 다운캐스팅 
		
		
		
		
		
		/*
		Person  student = new Student();         Student p = (Student) student;
		*/
		
	}

}
